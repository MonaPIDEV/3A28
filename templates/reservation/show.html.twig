{% extends 'base.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}
    <h1>Reservation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reservation.id }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ reservation.createdAt ? reservation.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Transport</th>
                <td>{{ reservation.transport }}</td>
            </tr>
            <tr>
                <th>Hotel</th>
                <td>{{ reservation.hotel }}</td>
            </tr>
            <tr>
                <th>Restaurant</th>
                <td>{{ reservation.restaurant }}</td>
            </tr>
            <tr>
                <th>DateIn</th>
                <td>{{ reservation.dateIn ? reservation.dateIn|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Guide</th>
                <td>{{ reservation.guide }}</td>
            </tr>
            <tr>
                <th>NumDays</th>
                <td>{{ reservation.numDays }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('reservation_index') }}">back to list</a>

    <a href="{{ path('reservation_edit', {'id': reservation.id}) }}">edit</a>

    {{ include('reservation/_delete_form.html.twig') }}
{% endblock %}
