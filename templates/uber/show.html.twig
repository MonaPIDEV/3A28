{% extends 'base.html.twig' %}
{% block title %}Uber{% endblock %}
{% block body %}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0 text-dark">Dashboard</h1>
                    </div><!-- /.col -->
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active">Dashboard </li>
                            {{ include('uber/_delete_form.html.twig', {'button_label': 'Delete'}) }}
                        </ol>
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
        <!-- /.content-header -->
        <div>

            <table class="table contact__form">
                <tbody>
                <tr>
                    <th>Nom_uber</th>
                    <td>{{ uber.nomUber }}</td>
                </tr>
                <tr>
                    <th>Num_tel_uber</th>
                    <td>{{ uber.numTelUber }}</td>
                </tr>
                <tr>
                    <th>Field_uber</th>
                    <td>{{ uber.fieldUber }}</td>
                </tr>
                <tr>
                    <th>Prix_uber</th>
                    <td>{{ uber.prixUber }}</td>
                </tr>
                <tr>
                    <th>Photos_uber</th>
                    <td><img src="/uploads/images/{{ uber.photosUber }}" alt="" width="140" height="200"></td>
                </tr>
                </tbody>
            </table>
            <a class="btn btn-success" href="{{ path('uber_index') }}">Back to list</a>
            <a class="btn btn-primary" href="{{ path('uber_edit', {'id': uber.id}) }}">edit</a>
        </div>
    </div>
{% endblock %}
