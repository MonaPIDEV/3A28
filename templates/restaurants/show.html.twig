{% extends 'back.html.twig' %}
{% block body %}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0 text-dark">Dashboard</h1>
                    </div><!-- /.col -->
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active">Dashboard </li>
                        </ol>
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
        <!-- /.content-header -->
        <div>

            <a href="{{ path('restaurants_index') }}">back to list</a>

            <a href="{{ path('restaurants_edit', {'id': restaurant.id}) }}">edit</a>
            <table class="table container">
                <tbody>
                <tr>
                    <th>ID</th>
                    <td>{{ restaurant.id }}</td>
                </tr>
                <tr>
                    <th>Nom restaurant</th>
                    <td>{{ restaurant.nomRest }}</td>
                </tr>
                <tr>
                    <th>Adress restaurant</th>
                    <td>{{ restaurant.addRest }}</td>
                </tr>
                <tr>
                    <th>Phone restaurant</th>
                    <td>{{ restaurant.numTelRest }}</td>
                </tr>
                <tr>
                    <th>Photo restaurant</th>
                    <td><img src="{{ asset('/uploads/images/' ~ restaurant.photoRest) }}" alt=""  width="70" height="70"></td>
                </tr>
                <tr>
                    <th>Catalogue</th>
                    <td>{{ restaurant.idCata }}</td>
                </tr>
                </tbody>
            </table>
            {{ include('restaurants/_delete_form.html.twig') }}
