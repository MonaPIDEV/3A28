{% extends 'base.html.twig' %}

{% block body %}
    {{parent()}}
    <!-- Breadcrumb Begin -->
    <div class="breadcrumb-area set-bg" data-setbg="img/breadcrumb/breadcrumb-normal.jpg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb__text">
                        <h2>Add Restaurants</h2>
                        <div class="breadcrumb__option">
                            <a href="#"><i class="fa fa-home"></i> Restaurants</a>
                            <span>Add Restaurants</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Breadcrumb End -->

    <!-- Contact Section Begin -->
    <section class="contact spad">
        <div class="container">
            <div class="row">

                <div class="col-lg-12 col-md-12">
                    <form action="#" class="contact__form">
                        <div class="row">
                            <div class="col-lg-6 col-md-6">
                                <input type="text" placeholder="id-restaurant" name="id_rest">
                            </div>
                            <div class="col-lg-6 col-md-6">
                                <input type="text" placeholder="nom-restaurant" name="nom_rest">
                            </div>
                            <div class="col-lg-6 col-md-6">
                                <input type="text" placeholder="adresse-restaurant" name="add_rest">
                            </div>
                            <div class="col-lg-6 col-md-6">
                                <input type="text" placeholder="Phone-restaurant" name="num_tel_rest">
                            </div>
                            <div class="col-lg-6 col-md-6">
                                <input type="file" class="form-control-file" id="photo_rest">
                            </div>
                        </div>
                        <button type="submit" class="site-btn">SAVE</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <!-- Contact Section End -->
{% endblock %}