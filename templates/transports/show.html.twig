{% extends 'back.html.twig' %}
{% block title %}Transport{% endblock %}
{% block body %}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0 text-dark">Dashboard</h1>
                    </div><!-- /.col -->
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                            <li class="breadcrumb-item active">Transports </li>
                            {{ include('transports/_delete_form.html.twig', {'button_label': 'Delete'}) }}
                        </ol>
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
        <!-- /.content-header -->
        <div>

            <table class="table contact__form">
                <tbody>
                <tr>
                    <th>Type</th>
                    <td>{{ transport.type }}</td>
                </tr>
                <tr>
                    <th>Etat_transport</th>
                    <td>{{ transport.etatTransport }}</td>
                </tr>
                <tr>
                    <th>Photo_uber</th>
                    <td><img src="/uploads/images/{{ transport.photoTransport }}" alt="" width="140" height="200"></td>
                </tr>
                </tbody>
            </table>
            <a class="btn btn-success" href="{{ path('transports_index') }}">Back to list</a>
            <a class="btn btn-primary" href="{{ path('transports_edit', {'id': transport.id}) }}">edit</a>
     </div>
    </div>
{% endblock %}


