{% extends 'back.html.twig' %}
{% block body %}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Dashboard</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Dashboard </li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <div>

        <a href="{{ path('activities_index') }}">back to list</a>

        <a href="{{ path('activities_edit', {'id': activities.id}) }}">edit</a>
        <table class="table container">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ activity.id }}</td>
            </tr>
            <tr>
                <th>Nom_activite</th>
                <td>{{ activity.nomActivite }}</td>
            </tr>
            <tr>
                <th>Lieu_evenement</th>
                <td>{{ activity.lieuEvenement }}</td>
            </tr>
            <tr>
                <th>Prix_participation</th>
                <td>{{ activity.prixParticipation }}</td>
            </tr>
            <tr>
                <th>Date_debut</th>
                <td>{{ activity.dateDebut ? activity.dateDebut|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date_fin</th>
                <td>{{ activity.dateFin ? activity.dateFin|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Heure_evenement</th>
                <td>{{ activity.heureEvenement ? activity.heureEvenement|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Heure_fin</th>
                <td>{{ activity.heureFin ? activity.heureFin|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ activity.description }}</td>
            </tr>
        </tbody>
    </table>
        <a class="btn btn-success" href="{{ path('activities_index') }}">Back to list</a>
        <a class="btn btn-primary" href="{{ path('activities_edit' ~ 'id' : activities.id) }}">Edit</a>
     </div>
     </div>
{% endblock %}
