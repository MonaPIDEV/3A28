{% extends 'back.html.twig' %}

{% block title %}Activities index{% endblock %}

{% block body %}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0 text-dark">Liste des Activités</h1>
                    </div><!-- /.col -->
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active">Liste des Activités</li>
                        </ol>
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
        <!-- /.content-header -->
        <div class="card">
            <div class="card-header">
                <a class="btn btn-primary" href="{{ path('activities_new') }}">Ajouter Activité</a>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <div class="input-group input-group-sm">
                    <input type="text" id="search" class="form-control fas fa-search" placeholder="chercher selon lieu d'activité..">
                    <div class="input-group-append">
                        <button class="btn btn-navbar" type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
                <br>
                <table id="t" class="table table-bordered">

                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom_activite</th>
                        <th>Lieu_evenement</th>
                        <th>Prix_participation</th>
                        <th>Date_debut</th>
                        <th>Date_fin</th>
                        <th>Heure_evenement</th>
                        <th>Heure_fin</th>
                        <th>Description</th>
                        <th>actions</th>


                    </tr>
                    </thead>
                    <tbody id="all">
                    {% for activity in activities %}
                        <tr>
                            <td>{{ activity.id }}</td>
                            <td>{{ activity.nomActivite }}</td>
                            <td>{{ activity.lieuEvenement }}</td>
                            <td>{{ activity.prixParticipation }}</td>
                            <td>{{ activity.dateDebut ? activity.dateDebut|date('Y-m-d') : '' }}</td>
                            <td>{{ activity.dateFin ? activity.dateFin|date('Y-m-d') : '' }}</td>
                            <td>{{ activity.heureEvenement ? activity.heureEvenement|date('H:i:s') : '' }}</td>
                            <td>{{ activity.heureFin ? activity.heureFin|date('H:i:s') : '' }}</td>
                            <td>{{ activity.description }}</td>
                            <td>
                                <a class="btn btn-success btn-sm rounded-0"
                                   href="{{ path('activities_edit',{'id' : activity.id}) }}"><i
                                            class="fa fa-edit"></i></a>

                                <form method="post" action="{{ path('activities_delete', {'id': activity.id}) }}"
                                      onsubmit="return confirm('Etes vous sur de vouloir supprimer l activité ?');">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <input type="hidden" name="_token"
                                           value="{{ csrf_token('delete' ~ activity.id) }}">
                                    <button class="btn btn-danger btn-sm rounded-0"><i class="fa fa-trash"></i></button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                    <tbody id="search">
                    </tbody>

                </table>
            </div>
            <!-- /.card-body -->
            <div class="card-footer clearfix">
                <ul class="pagination pagination-sm m-0 float-right">
                    <li class="page-item"><a class="page-link" href="#">&laquo;</a></li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">&raquo;</a></li>
                </ul>
            </div>
        </div>

    </div>

    <!-- /.content-wrapper -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js">
    </script>
    <script>
        $(document).ready(function () {
            $("#search").keyup(function (e) {
                /* La variable value va prendre la valeur insérer dans le champ de texte afin d’effectuer la recherche */
                var value = $(this).val();
                /* Ajax est lancé lors du remplissage du champ texte dont l’id est « search » pour faire la recherche */
                $.ajax({
                    /* l’url est une chaine de caractères contenant l’adresse où la requête est envoyée */
                    url: "{{ path('search_activities') }}",
                    /* La méthode utilisée pour transférer les données est GET */
                    type: 'GET',
                    /*Ici search value va prendre la chaine entrée par un utilisateur dans la zone de recherche et sera placée après l’url */
                    data: {
                        'searchValue': value
                    },
                    /*Cette fonction permet de vider le contenu du tableau pour recevoir le nouveau contenu*/
                    success: function (retour) {
                        //console.log(retour);
                        if (retour) {
                            $('#t tbody#search').empty();
                            $.each(JSON.parse(retour), function (i, obj) {
                                $('#t tbody#all').hide();
                                $('#t tbody#search').append(
                                    '<tr><td> ' + obj.id + ' ' +
                                    ' </td><td>    ' + obj.nom_activite + '' +
                                    ' </td><td>    ' + obj.prix_participation + '' +
                                    ' </td><td>    ' + obj.date_debut ? activity.dateDebut | date('Y-m-d') : '' + '' +
                                    '  </td><td>' + obj.date_fin ? activity.dateFin | date('Y-m-d') : '' + '' +
                                    '  </td><td>' + obj.heure_evenement ? activity.heureEvenement | date('H:i:s') : '' + '' +
                                    '  </td><td>' + obj.heure_fin ? activity.heureFin | date('H:i:s') : '' + '' + '  </td><td>' + obj.activity.description + '' + ' </td><td><a href="/activities/' + obj.id + '">show</a> </br><a href="/activities/' + obj.id + '/edit">edit</a></td></tr>');
                            });
                        } else {
                            $('#t tbody#all').show();
                            $('#t tbody#search').empty();
                            $('#t tbody#search').fadeIn('fast');
                        }
                    },
                });
                return false;
            });
        });
    </script>
{% endblock %}

